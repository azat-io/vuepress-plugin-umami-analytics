{
  "name": "vuepress-plugin-umami-analytics",
  "description": "VuePress plugin for using Umami analytics",
  "version": "1.2.0",
  "type": "module",
  "keywords": [
    "analytics",
    "umami",
    "vuepress",
    "vuepress2",
    "vuepress-plugin"
  ],
  "repository": "azat-io/vuepress-plugin-umami-analytics",
  "author": "Azat S. <to@azat.io>",
  "license": "MIT",
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "scripts": {
    "start": "tsc -b --watch",
    "clean": "rimraf ./dist",
    "build": "tsc -b",
    "prepare": "pnpm run build",
    "release": "pnpm release:check && pnpm release:version && pnpm release:publish",
    "release:changelog": "standard-version --infile changelog.md --same-file --skip.bump --skip.commit --skip.tag",
    "release:check": "pnpm test && pnpm build",
    "release:publish": "clean-publish",
    "release:version": "bumpp package.json --execute=\"pnpm release:changelog && git add changelog.md\" --commit \"build: publish v%s\" --tag --all",
    "lint": "eslint .",
    "test:types": "tsc --noEmit --pretty",
    "test": "pnpm run test:types && pnpm run lint"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@vuepress/client": "2.0.0-beta.62",
    "@vuepress/core": "2.0.0-beta.62",
    "@vuepress/utils": "2.0.0-beta.62"
  },
  "devDependencies": {
    "@azat-io/eslint-config-typescript": "^0.8.0",
    "bumpp": "^9.1.0",
    "clean-publish": "^4.2.0",
    "eslint": "^8.40.0",
    "rimraf": "5.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.4"
  }
}
